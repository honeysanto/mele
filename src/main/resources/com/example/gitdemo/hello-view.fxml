<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefHeight="600" prefWidth="400" style="-fx-background-color: #0033cc;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" layoutX="50" layoutY="100" prefWidth="300" spacing="15">
        <Label style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER;" text="Login" />
        <Label maxWidth="300" style="-fx-font-size: 12px; -fx-text-fill: white; -fx-alignment: CENTER;" text="Please enter your Login and your Password" wrapText="true" />

        <VBox prefWidth="300" spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: Transparent; -fx-padding: 5px; -fx-border-radius: 10px; -fx-pref-width: 300px; -fx-border-color: White;">
                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../username.jpg" />
                </ImageView>
                <TextField promptText="Username or E-mail" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-pref-width: 240px; -fx-skin: white; -fx-font-weight: Bold;" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: transparent; -fx-padding: 5px; -fx-border-radius: 10px; -fx-pref-width: 300px; -fx-border-color: White;">
                <ImageView cache="true" cacheHint="QUALITY" fitHeight="20" fitWidth="20" pickOnBounds="true" smooth="false">
                    <Image url="@../../../key.png" />
                </ImageView>
                <PasswordField promptText="Password" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-pref-width: 240px; -fx-font-weight: Bold;" />
            </HBox>
        </VBox>

        <Label style="-fx-font-size: 12px; -fx-text-fill: white; -fx-alignment: CENTER_RIGHT; -fx-translate-x: 90px; -fx-font-style: Italic;" text="Forgot password?" />

        <Button style="-fx-background-color: Transparent; -fx-text-fill: Light Green; -fx-font-style: Bold; -fx-pref-width: 300px; -fx-padding: 5px; -fx-font-size: 14px; -fx-border-radius: 10px; -fx-border-color: #00cc00;" text="Login" textFill="#20e00a" />

        <Button style="-fx-background-color: black; -fx-text-fill: white; -fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-radius: 20; -fx-font-style: Bold;" text="  Or sign-in with Google">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../google.png" />
                    </image>
                </ImageView>
            </graphic></Button>

        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 12px; -fx-text-fill: white; -fx-font-style: italic;" text="Not a member yet? " />
            <Hyperlink style="-fx-font-size: 12px; -fx-text-fill: #00ccff; -fx-font-style: Italic;" text="Register!" />
        </HBox>
    </VBox>
</AnchorPane>
